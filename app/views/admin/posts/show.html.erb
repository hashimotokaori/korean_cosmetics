<div class="container">
  <div class="col-sm-10"><h2>投稿履歴詳細</h2></div>
  <%= form_with model: @post, url: admin_post_path, method: :patch, local: true do |f| %>
    <table class="table table-bordered">
        <tr>
          <th class="table-active" style="width:20%">投稿者</th>
          <td class="link"><%= link_to admin_customer_path do %><%= @post.customer.last_name + @post.customer.first_name %><% end %></td>
        </tr>
        <tr><th class="table-active" style="width:20%">投稿日</th><td><%= @post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td></tr>
        <tr><th class="table-active" style="width:20%">気になる理由</th><td><%= @post.caption %></td></tr>
        <tr><th class="table-active" style="width:20%">評価</th><td><%= @post.review %></td></tr>
        <tr><th class="table-active" style="width:20%">乾燥</th><td><%= @post.review %></td></tr>

          
        </tr>
    </table>
  <% end %>
  </div>